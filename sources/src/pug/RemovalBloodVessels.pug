    - var list          = [list1, list2, list3, list4, list5]

    - var data = {type: 'imgAndText', breadcumps: breadcumps, breadcumpsCurrent: breadcumpsCurrent, cur: cur, title: title, subtitle: subtitle, text: text, list: list, img: img}
    include section/intro-section

