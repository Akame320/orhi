    - var lists     = [list1, list2, list3, list4, list5]

    - var cartTitle     = 'Показания'
    - var cartSubtitle  = 'к ПРОВЕДЕНИЮ ПРОЦЕДУРЫ'
    - var cartText      = [cartText1, cartText2]
