    - var cartTitle     = 'Рекомендации'
    - var cartSubtitle  = 'до ПРОЦЕДУРЫ'

    // Добавляем карточку
    - var cart2         = [{title: cartTitle, subtitle: cartSubtitle, texts: texts}]
    - var cartTitle     = 'противоПоказания'
    - var cartSubtitle  = 'к ПРОВЕДЕНИЮ ПРОЦЕДУРЫ'
    - var list1         = 'Индивидуальная непереносимость препаратов, используемых для процедуры'
    - var list2         = 'Дерматологические заболевания вне зависимости от локализации'
