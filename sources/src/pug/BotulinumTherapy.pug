    - var cart1         = [{title: cartTitle, subtitle: cartSubtitle, lists: lists, styleType: 'check'}]

    - var list1      =  'Индивидуальная непереносимость препарата или любых компонентов  препарата'
    - var list2      =  'Заболевания с нарушениями нервно-мышечной передачи(миастения,мистеноподобный синдром)'
    - var list3      =  'Повышение температуры тела'
