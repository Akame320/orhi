mixin priceRowClean(object)
    .price-section__row.flex-start
        .price-section__col.price-section__col-left !{object.left}
mixin yesList(object)
    li.close
        img(src="images/yes-check--white.png").icon
        span !{object.text}
mixin priceRow(object)
    .price-section__row
        .price-section__col.price-section__col-left !{object.left}
        if(object.center)
            .price-section__col.price-section__col-center !{object.center}
        .price-section__col.price-section__col-right !{object.right}
mixin priceRow4(object)
    .price-section__row
        .price-section__col.price-section__col-left !{object.left}
        .price-section__col.price-section__col-right !{object.right}
mixin priceRowClean4(object)
    .price-section__row.flex-start
        .price-section__col.price-section__col-left !{object.left}
mixin priceRow444(object)
    .price-section__row
        .price-section__col.price-section__col-left(style='width: 100%; max-width: 70%') !{object.left}
        .price-section__col.price-section__col-right(style='width: 100%; max-width: 30%') !{object.right}
